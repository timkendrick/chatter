@import "pods/components/ko-contacts-list/styles";

.Application {
  height: 100%;
  font-family: 'Lato', sans-serif;
  color: #212121;
}

.Application-sidebar {
  float: left;
  width: 250px;
  height: 100%;
  overflow-y: auto;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.25);
}

.Application-sidebarSectionHeader {
  padding: 2px 4px 3px;
  color: #5c5c5c;
  text-transform: uppercase;
}

.Application-main {
  margin-left: 250px;
  height: 100%;
  overflow-y: auto;
  border-left: 1px solid #efefef;
}
