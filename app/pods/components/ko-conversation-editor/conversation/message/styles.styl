.ConversationMessage {
  height: 57px;

  &:after {
    clear: both;
    display: block;
    content: '';
  }
}

.ConversationMessage-avatar {
  display: block;
  float: left;
  margin-right: 10px;
  width: 35px;
  height: 35px;

  img {
    width: 35px;
    height: 35px;
  }
}

.ConversationMessage-body {}

.ConversationMessage.current-user {
  text-align: right;
}

.ConversationMessage.current-user .ConversationMessage-avatar {
  float: right;
  margin-right: 0;
  margin-left: 10px;
}
