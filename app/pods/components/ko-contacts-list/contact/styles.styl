.ContactsListContact {
  padding: 10px 15px 10px 10px;
  background-color: #ffffff;
  color: #333333;
  font-size: 14px;
  -webkit-user-select: none;

  border-left: 0 solid rgba(#448aff, 0);
  transition: border-left-width 0.1s ease, border-left-color 0.3s ease;
}

.ContactsListContact-avatar {
  padding-right: 10px;
}

.ContactsListContact-name {
  width: 100%;
}

.ContactsListContact-icon {
  padding-left: 10px;
}

.ContactsListContact-avatar,
.ContactsListContact-name,
.ContactsListContact-icon {
  display: table-cell;
  vertical-align: middle;
}

.ContactsListContact-image {
  border: 2px solid transparent;
}

.ContactsListContact i {
  vertical-align: middle;
}

.ContactsListContact.disabled {
  color: #bdbdbd;
}

.ContactsListContact.disabled .ContactsListContact-image {
  opacity: 0.7;
}

.ContactsListContact.selected {
  border-left: 5px solid #448aff;
  background-color: #fafafa;
}

.ContactsListContact:not(.selected):not(.disabled) {
  cursor: pointer;
}

.ContactsListContact:not(.selected):not(.disabled):hover {
  background: #424242;
  color: #fff;
}

.ContactsListContact:not(.selected):not(.disabled):hover .ContactsListContact-image {
  border-color: #5c5c5c;
}
