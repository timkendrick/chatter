<form class="MessageField" {{action "onSubmit" on="submit"}}>
  <div class="MessageField-inputContainer">
    {{textarea class="MessageField-input form-control" type="text" placeholder="Write Message"
      value=value
    }}
  </div>
  <div class="MessageField-submitContainer">
      <button class="MessageField-submit btn btn-white btn-outline btn-rounded" data-toggle="dropdown" disabled={{isSubmitDisabled}}>
          <i class="zmdi zmdi-comment-alt-text"></i>
      </button>
  </div>
</form>
