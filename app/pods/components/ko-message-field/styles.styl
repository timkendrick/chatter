.MessageField {
  font-size: 13px;
  background: #ffffff;
  padding: 5px 10px 5px 5px;
}

.MessageField-inputContainer,
.MessageField-submitContainer {
  display: table-cell;
  vertical-align: middle;
}

.MessageField-inputContainer {
  width: 100%;
}

.MessageField-submitContainer {
  padding-left: 10px;
}

.MessageField-input {
  border: none;
  box-shadow: none;
  resize: none;

  textarea.form-control& {
    height: 60px;
  }
}

