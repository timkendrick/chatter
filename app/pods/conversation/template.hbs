<div class="ConversationView">
  <div class="ConversationView-messages">
    {{ko-conversation
      conversation=model.conversation
      currentUser=model.currentUser
      close="close"
    }}
  </div>
  <div class="ConversationView-send">
    {{ko-message-field
      value=inputMessage
      focused=true
      action="sendMessage"
    }}
  </div>
</div>
