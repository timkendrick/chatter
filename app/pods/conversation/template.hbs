<div class="ConversationView">
  <div class="ConversationView-messages">
    {{ko-conversation
      conversation=model
      currentUser=currentUser
      close="close"
    }}
  </div>
  <div class="ConversationView-send">
    {{ko-message-field
      value=state.draft
      focused=true
      action="sendMessage"
    }}
  </div>
</div>
